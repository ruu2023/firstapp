<div>
  <%# section-user-regist %>
  <section class="min-w-full min-h-svh bg-slate-100">
    <div class="flex justify-center sm:py-7 py-0">
      <div class="w-full sm:w-96 bg-white rounded-md shadow p-7">
        <div>
          <p class="text-2xl py-3">ログイン</p>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="flex flex-col gap-4">
            <%# deivseのフラッシュメッセージを表示 %>
            <p class="notice"><%= notice %></p>
            <p class="alert text-red-500"><%= alert %></p>
            <div class="field">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded"%>
            </div>
            <div class="field">
              <%= f.label :password, "パスワード" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded"%>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="actions">
              <%= f.submit "ログイン", class: "w-full bg-blue-500 text-center text-white rounded-md py-3 hover:bg-blue-300 my-5" %>
            </div>
          </div>
        <% end %>
        <div class="text-blue-500">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>
