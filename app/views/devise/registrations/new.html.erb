<div>
  <%# section-user-regist %>
  <section class="min-w-full min-h-svh bg-slate-100">
    <div class="flex justify-center sm:py-7 py-0">
      <div class="w-full sm:w-96 bg-white rounded-md shadow p-7">
        <div>
          <p class="text-2xl py-3">ユーザー登録</p>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="flex flex-col gap-4">
            <p class="text-red-500"><%= render "devise/shared/error_messages", resource: resource %></p>
            <div class="field">
              <%= f.label :nickname, "ニックネーム" %> <span>（10文字以内）</span>
              <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname",maxlength: "10", class: "w-full rounded" %>
            </div>
            <div class="field">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded"%>
            </div>
            <div class="field">
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
                <span>（<%= @minimum_password_length %>文字以上）</span>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded"%>
            </div>
            <div class="field">
              <%= f.label :password_confirmation, "パスワードの確認" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded"%>
            </div>
            <div class="actions">
              <%= f.submit "登録", class: "w-full bg-blue-500 text-center text-white rounded-md py-3 hover:bg-blue-300 my-5" %>
            </div>
          </div>
        <% end %>
        <div class="actions text-blue-500 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>
