<div>
  <%# section-forget-password %>
  <section class="min-w-full min-h-svh bg-slate-100">
    <div class="flex justify-center sm:py-7 py-0">
      <div class="w-full sm:w-96 bg-white rounded-md shadow p-7">
        <div>
          <p class="text-2xl py-3">パスワード再設定</p>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="flex flex-col gap-4">
            <p class="text-red-500"><%= render "devise/shared/error_messages", resource: resource %></p>
            <div class="field">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded" %>
            </div>
            <div class="actions">
              <%= f.submit "パスワード再設定メールを送信", class: "w-full bg-blue-500 text-center text-white rounded-md py-3 hover:bg-blue-300 my-5" %>
            </div>
          </div>
        <% end %>
        <div class="text-blue-500">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</div>
