<div>
  <%# section-new-list %>
  <section class="min-w-full min-h-svh bg-slate-100">
    <div class="flex justify-center sm:py-7 py-0">
      <div class="w-full sm:w-96 bg-white shadow sm:rounded-2xl p-7">
        <div>
          <p class="text-2xl py-3">プロジェクト新規登録</p>
        </div>
        <%= form_with( local: true) do |form| %>
          <div class="flex flex-col gap-4">
            <%= form.label :name, "プロジェクト名" %>
            <%= form.text_field :name, placeholder: "プロジェクト名" %>
            <%= form.label :name, "開始日" %>
            <%= form.text_field :image, placeholder: "" %>
            <%= form.label :name, "終了日" %>
            <%= form.text_field :image, placeholder: "" %>
            <%= form.submit "SEND", class: "text-white bg-blue-500 py-3 hover:bg-blue-300 rounded-md" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
